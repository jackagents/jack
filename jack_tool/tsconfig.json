{
  "compilerOptions": {
    "incremental": true,
    "target": "es2021",
    "module": "commonjs",
    "lib": ["dom", "es2021"],
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "release/app/dist",
    "paths": {
      "*": ["node_modules/@types/*"],
      "main/*": ["main/*"],
      "misc/*": ["misc/*"],
      "components/*": ["renderer/components/*"],
      "constant/*": ["misc/constant/*"],
      "theme": ["misc/theme/Theme.ts"],
      "types/*": ["misc/types/*"],
      "projectRedux/*": ["redux/*"],
      "addons/*": ["misc/addons/*"],
      "projectEvents/*": ["misc/events/*"],
      "assets/*": ["../assets/*"],
      "imgs": ["renderer/images/index.ts"],
      "rendererUtils": ["misc/utils/common/rendererUtils.ts"],
      "hooks/*": ["misc/hooks/*"],
      "listeners/*": ["main/listeners/*"],
      "package.json": ["../package.json"],
      "srcRoot/*": ["./*"],
      "root/*": ["../*"]
    }
  },
  "include": ["src/**/*", "./.eslintrc.js"],
  "exclude": ["release/build", "release/app/dist", ".erb/dll", "mocks", "src/__tests__", "src/misc/addons", "deprecated"]
}
